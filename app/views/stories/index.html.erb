<div class="jumbotron index-header">
  <h1 class="index-text">This is the story of your life, don't f**k it up.</h1>
  <h2 class="index-text">be open..... be freeee......</h2>
</div>

<% if @stories.any? %>
  <ul class="list-unstyled">
    <% @stories.each do |story| %>
      <li><%= link_to story.title, story_path(story)%></li>
    <% end %>
  </ul>
<% else %>
  <h3>No Stories Yet</h3>
<% end %>






<!-- Button trigger modal -->
<button class="btn btn-link" data-toggle="modal" data-target="#stories">
  <i class="fa fa-plus add-story text-center"></i>
</button>

<!-- Modal -->
<div class="modal fade" id="stories" tabindex="-1" role="dialog" aria-labelledby="storyLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="story">Add Title</h4>
      </div>
      <div class="modal-body">
        <%= render 'form' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
